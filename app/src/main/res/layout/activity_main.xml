<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="dk.lndesign.relay.MainActivity">

    <Button
        android:id="@+id/foreground_service_start"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="Start Foreground Service" />

    <Button
        android:id="@+id/foreground_service_stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:text="Stop Foreground Service" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_view_channels"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

</LinearLayout>
